<VilmaAlert ShowCloseButton="true" ColorScheme="ComponentStyle.Primary" @ref="@_alert1" AlertClosed="AlertClosed">
    <BodyTemplate>
        <h3>Title</h3>
        <p>This is my content</p>
    </BodyTemplate>
</VilmaAlert>

