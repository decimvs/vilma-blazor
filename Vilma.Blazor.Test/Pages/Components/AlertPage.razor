<button type="button" @onclick="CloseAlert1">Close alert 1</button>

@code {
    private VilmaAlert? _alert1;

    private void AlertClosed()
    {
        Console.WriteLine("Alert closed");
    }

    private void CloseAlert1()
    {
        if (_alert1 != null)
            _alert1.Close();
    }
}

