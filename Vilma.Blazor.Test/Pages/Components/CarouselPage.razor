<h3>Carousel</h3>

<VilmaCarousel CssClasses="col-6" @ref="@_carouselRef" SlideStartedTransition="OnSlide" SlideFinishedTransition="OnSlid">
    <Slides>
        <VilmaCarouselSlide ImageUrl="/images/dummy_600x400_ffffff_cccccc_img-1.png" Active="true" ImageAlt="IMG 1" ImageCssClasses="w-100" />
        <VilmaCarouselSlide ImageUrl="/images/dummy_600x400_ffffff_cccccc_img-2.png" ImageAlt="IMG 2" ImageCssClasses="w-100" />
        <VilmaCarouselSlide ImageUrl="/images/dummy_600x400_ffffff_cccccc_img-3.png" ImageAlt="IMG 3" ImageCssClasses="w-100" />
    </Slides>
</VilmaCarousel>

<VilmaButtonGroup CssClasses="mt-3">
    <Buttons>
        <VilmaButton Content="Prev" OnClick="@(() => _carouselRef.PreviusSlide())" />
        <VilmaButton Content="Start" OnClick="@(() => _carouselRef.StartCycle())" />
        <VilmaButton Content="Stop" OnClick="@(() => _carouselRef.PauseCycle())" />
        <VilmaButton Content="Next" OnClick="@(() => _carouselRef.NextSlide())" />
    </Buttons>
</VilmaButtonGroup>

